// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  
}

datasource db {
    provider     = "mongodb"
    url      = env("DATABASE_URL")
    relationMode = "prisma"
}

model Example {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  token   String    @unique
  name    String?
  package Package[]
  packingorder  PackingOrder[]
  address Address[]

  role    Role      @default(USER)
}



model Package {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime      @default(now())
  owner     User?        @relation(fields: [ownerId], references: [id])
  ownerId   String?        @db.ObjectId
  status    PackageStatus @default(DOMESTIC)
  recipient String?
  country   String?
  type      String?
  weight    Int?
  billing   Int?
  tracking  String?
  description String?
  localtracker String?
  checked      Boolean?   @default(false)
  usermessage  String?  


  @@index([ownerId])

}

model PackingOrder {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime      @default(now())
  owner     User?        @relation(fields: [ownerId], references: [id])
  ownerId   String?        @db.ObjectId
  packageids String[]
  orderno    String?
 
    

  @@index([ownerId])

}

model Address {
   id        String        @id @default(auto()) @map("_id") @db.ObjectId
   createdAt DateTime      @default(now())
   owner     User?        @relation(fields: [ownerId], references: [id])
   ownerId   String?        @db.ObjectId
   name String?
   country String?
}

enum Role {
  USER
  ADMIN
}

enum PackageStatus {
  AWAITS
  DOMESTIC
  STORAGE
  PAYMENT
  RECEIPT
}
